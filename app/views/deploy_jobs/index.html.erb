<div class="container">
  <h2 class="title">Deploy jobs</h2>
  <% if @deploy_jobs.size > 0 %>
    <table class="table is-fullwidth is-hoverable is-striped">
      <thead>
        <th>ID</th>
        <th>Status</th>
        <th>Account</th>
        <th>Repository</th>
        <th>Branch</th>
        <th>Commit</th>
        <th>Cluster</th>
        <th>Service</th>
        <th>Mode</th>
        <th>Created at</th>
      </thead>
      <tbody>
        <% @deploy_jobs.each do |deploy_job| %>
          <tr>
            <td><%= link_to(deploy_job.id, deploy_job_path(deploy_job.id)) %></td>
            <td>
              <% if deploy_job.status == 'success' %>
                <i class="fa fa-check-circle"></i>
              <% elsif deploy_job.status == 'in_progress' %>
                <i class="fa fa-spinner fa-spin"></i>
              <% elsif deploy_job.status == 'failure' %>
                <i class="fa fa-exclamation-triangle"></i>
              <% end %>
              <%= deploy_job.status %>
            </td>
            <td><%= deploy_job.account %></td>
            <td><%= deploy_job.repository %></td>
            <td><%= deploy_job.branch.truncate(24) %></td>
            <td>
              <% if deploy_job.commit_id.present? %>
                <i class="fab fa-github"></i>
                <%= link_to(deploy_job.commit_id[0, 7], Genova::Github::Client.new(deploy_job.account, deploy_job.repository).build_commit_uri(deploy_job.commit_id)) %>
              <% end %>
            </td>
            <td><%= deploy_job.cluster %></td>
            <td><%= deploy_job.service %></td>
            <td><%= deploy_job.mode %></td>
            <td><%= deploy_job.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <nav class="pagination is-right is-rounded" role="navigation">
      <ul class="pagination-list">
        <%= paginate @deploy_jobs %>
      </ul>
    </div>
  <% else %>
    <p>Logs does not exist.</p>
  <% end %>
</div>
